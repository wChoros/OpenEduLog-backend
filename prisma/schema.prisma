generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Teacher {
  id                 Int                  @id @default(autoincrement())
  first_name         String
  last_name          String
  email              String
  TeachersOnSubjects TeachersOnSubjects[]
}

model Student {
  id         Int     @id @default(autoincrement())
  first_name String
  email      String
  groups     Group[]
  auth       Auth    @relation(fields: [authId], references: [id])
  authId     Int
  Grade      Grade[]
}

model Group {
  id                     Int                  @id @default(autoincrement())
  name                   String
  students               Student[]
  teachers_with_subjects TeachersOnSubjects[]
}

model Auth {
  id                 Int     @id @default(autoincrement())
  email              String
  login              String
  is_email_confirmed Boolean
  phone_number       String
  password           String

  Student Student[]
}

model Subject {
  id   Int    @id @default(autoincrement())
  name String

  TeachersOnSubjects TeachersOnSubjects[]
}

model TeachersOnSubjects {
  id        Int     @id @default(autoincrement())
  teacher   Teacher @relation(fields: [teacherId], references: [id])
  teacherId Int
  subject   Subject @relation(fields: [subjectId], references: [id])
  subjectId Int

  Group Group[]
  Grade Grade[]
}

model Adress {
  id      Int    @id @default(autoincrement())
  street  String
  house   String
  city    String
  zip     String
  country String
}

model Grade {
  id                     Int                @id @default(autoincrement())
  value                  Float
  student                Student            @relation(fields: [studentId], references: [id])
  studentId              Int
  teacher_with_subject   TeachersOnSubjects @relation(fields: [teacher_with_subjectId], references: [id])
  teacher_with_subjectId Int
}
